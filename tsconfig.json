{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    // "module": "esnext",
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "declarationDir": "lib",
    "declaration": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "coverage",
    "example",
    "app",
    "lib",
    "config.rollup.js"
  ]
}
